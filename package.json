{
  "name": "markvis",
  "version": "0.0.5",
  "description": "generation of visualization in markdown",
  "main": "index.js",
  "scripts": {
    "example": "node examples/basic.js",
    "test": "jest && npm run lint && npm run build",
    "test:cov": "jest --coverage && npm run lint",
    "lint": "xo",
    "build": "bili --name index"
  },
  "author": "GeekPlux <geekplux@gmail.com> (http://geekplux.com/)",
  "keywords": [
    "visualization",
    "markdown",
    "md",
    "vis",
    "markdown-it",
    "markdown-it-plugin"
  ],
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "xo": {
    "extends": "geekplux",
