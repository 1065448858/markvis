    "markvis-pie": "^0.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.22.0",
    "bili": "^0.14.0",
    "d3-node": "^1.0.3",
    "eslint-config-geekplux": "^1.0.0",
    "jest-cli": "^19.0.2",
    "markdown-it": "^8.2.2",
    "xo": "^0.17.1"
